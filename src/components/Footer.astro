---
import { Image } from 'astro:assets'

const footerLinks = [
  { name: 'Quen somos?', href: '/quen-somos' },
  { name: 'Cómo utilizar a web?', href: '/como-utilizar' },
  { name: 'Cómo colaborar?', href: '/como-colaborar' },
  { name: 'Cómo contactar?', href: '/como-contactar' },
]

import muinoPng from '../assets/images/muino.png'
---

<footer class="w-full bg-gray-100 py-6">
  <div class="mx-auto flex max-w-3xl flex-col items-center space-y-4 px-4">
    <!-- Logo -->
    <Image src={muinoPng} alt="Muíño Logo" width={50} height={50} />

    <!-- Association Name -->
    <p class="text-center font-medium text-gray-700">Asociación XXX</p>

    <!-- Links -->
    <div
      class="flex flex-wrap justify-center gap-3 text-center text-sm text-gray-600"
    >
      {
        footerLinks.map((link) => (
          <a href={link.href} class="underline hover:text-gray-800">
            {link.name}
          </a>
        ))
      }
    </div>
  </div>
</footer>
