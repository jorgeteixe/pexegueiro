---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import bookSvg from '../assets/images/book.svg'
---

<header class="w-full border-b border-gray-200 bg-white">
  <div class="mx-auto max-w-6xl px-4 py-4 sm:px-6">
    <div class="flex items-center justify-between">
      <!-- Logo & Title -->
      <div class="flex items-center space-x-3">
        <div class="rounded-lg bg-gray-50 p-2">
          <Image
            src={bookSvg}
            alt="Logo A Galicia mui침eira"
            width={32}
            height={32}
            class="shrink-0"
          />
        </div>
        <div class="flex flex-col">
          <h1 class="text-lg font-semibold text-gray-900 sm:text-xl">
            A Galicia mui침eira
          </h1>
          <h2 class="max-w-xs text-xs text-gray-500 sm:max-w-none sm:text-sm">
            E as xeraci칩ns que xiraron ao son dos mui침os
          </h2>
        </div>
      </div>

      <!-- Navigation -->
      <nav class="flex items-center space-x-1">
        <a
          href="/"
          class="inline-flex items-center rounded-lg px-3 py-2 text-sm font-medium text-gray-600 transition-colors hover:bg-gray-50 hover:text-gray-900"
        >
          <Icon name="mdi:home" class="mr-1 h-4 w-4" />
          <span class="hidden sm:inline">Inicio</span>
        </a>

        <a
          href="/inventario"
          class="inline-flex items-center rounded-lg px-3 py-2 text-sm font-medium text-gray-600 transition-colors hover:bg-gray-50 hover:text-gray-900"
        >
          <Icon name="game-icons:water-mill" class="mr-1 h-4 w-4" />
          <span class="hidden sm:inline">Inventario</span>
        </a>

        <a
          href="/entrevistas"
          class="inline-flex items-center rounded-lg px-3 py-2 text-sm font-medium text-gray-600 transition-colors hover:bg-gray-50 hover:text-gray-900"
        >
          <Icon name="mdi:microphone" class="mr-1 h-4 w-4" />
          <span class="hidden sm:inline">Entrevistas</span>
        </a>
      </nav>
    </div>
  </div>
</header>
