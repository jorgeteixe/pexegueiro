---
import Layout from '../layouts/Layout.astro'
import GlobalMap from '../components/GlobalMap.tsx'
---

<Layout title="Mapa">
  <div
    class="relative z-10 mx-auto flex max-w-3xl flex-col items-center p-6 text-center"
  >
    <div class="rounded-md bg-black bg-opacity-60 px-4 py-2 text-white">
      <h1 class="text-xl font-bold">Mapa dos Muíños</h1>
    </div>
    <a
      href="/"
      class="mt-2 rounded-md border border-gray-300 bg-white px-3 py-1 text-sm text-gray-800 hover:bg-gray-100"
    >
      ← Voltar
    </a>
  </div>

  <GlobalMap client:only />
</Layout>
