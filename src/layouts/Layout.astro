---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon.io GENERATED CODE -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Metatags.io GENERATED CODE -->
    <!-- Primary Meta Tags -->
    <meta name="title" content={title} />
    <meta
      name="description"
      content="Esta páxina atópase en proceso de construcción."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://pexegueiro.estudoslocais.org/" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Esta páxina atópase en proceso de construcción."
    />
    <meta
      property="og:image"
      content="https://pexegueiro.estudoslocais.org/og-image.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content="https://pexegueiro.estudoslocais.org/"
    />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Esta páxina atópase en proceso de construcción."
    />
    <meta
      property="twitter:image"
      content="https://pexegueiro.estudoslocais.org/og-image.jpg"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
</style>
